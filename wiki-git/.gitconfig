[core]
	autocrlf = true ;windows
	;autocrlf = input ;linux
	safecrlf = true
	editor = vim
	quotepath = false
	longpaths = true
[color]
	ui = true
[user]
	name = Albert
	;email = ziyix.gao@intel.com
	email = 15221024927@163.com
[alias]
	ci = commit
	co = checkout
	br = branch

	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ss = status
    sss = status -s
    cs = commit -s
    cmds = commit --amend -s
[codecheck]

[push]
	default = current
[credential]
	helper = store



# AutoCRLF
# 提交时转换为LF，检出时转换为CRLF for windows
# git config --global core.autocrlf true   
# 提交时转换为LF，检出时不转换 for linux
# git config --global core.autocrlf input   
# 提交检出均不转换
# git config --global core.autocrlf false

# SafeCRLF
# 拒绝提交包含混合换行符的文件
# git config --global core.safecrlf true   
# 允许提交包含混合换行符的文件
# git config --global core.safecrlf false   
# 提交包含混合换行符的文件时给出警告
# git config --global core.safecrlf warn
